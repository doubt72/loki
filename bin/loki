#!/usr/bin/env ruby

require 'bundler/setup'

require 'loki'
require 'loki/version'

puts "Loki v#{Loki::VERSION}"
puts ""

if (ARGV.length == 2)
  source_path = ARGV[0]
  dest_path = ARGV[1]
else
  Loki::Utilities.error("Please supply a source and destination path.", true)
end

Loki.generate(source_path, dest_path)
